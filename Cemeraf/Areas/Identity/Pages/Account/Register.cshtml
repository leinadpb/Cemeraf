@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrarme";
}

<br />
<br />
<br />

<div align="center">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <br />
        <div align="center">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Crear nueva cuenta</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <div align="left"><label asp-for="Input.Firstname"></label></div>
                            <input type="text" asp-for="Input.Firstname" class="form-control" required />
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <div align="left"><label asp-for="Input.Lastname"></label></div>
                            <input type="text" asp-for="Input.Lastname" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <div align="left"><label asp-for="Input.Sex"></label></div>
                            <select class="form-control" asp-for="Input.Sex" required>
                                <option name="male">HOMBRE</option>
                                <option name="male">MUJER</option>
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <div align="left"><label asp-for="Input.Birthdate"></label></div>
                            <input type="date" class="form-control" asp-for="Input.Birthdate" required />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div align="left"><label asp-for="Input.Email"></label></div>
                    <input asp-for="Input.Email" class="form-control" required />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div align="left"><label asp-for="Input.Password"></label></div>
                    <input asp-for="Input.Password" class="form-control" required />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div align="left"><label asp-for="Input.ConfirmPassword"></label></div>
                    <input asp-for="Input.ConfirmPassword" class="form-control" required />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div align="center"><button type="submit" class="btn btn-outline-primary">Crear cuenta</button></div>
            </form>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
