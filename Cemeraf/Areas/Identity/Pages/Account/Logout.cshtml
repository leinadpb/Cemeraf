@page
@model LogoutModel
@{
    ViewData["Title"] = "Vuelve pronto...";
}
<br />
<br />
<br />
<br />
<header>
    <div align="center">
        <h1>@ViewData["Title"]</h1>
        <br />
        <p><span style="font-size:1.5rem;">¡Gracias por confiar en nosotros!</span></p>
        
    </div>
</header>
<br />
<br />
<div class="container" align="center">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
                <button type="submit" class="btn btn-outline-primary">Confirmar cierre de sesión</button>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>