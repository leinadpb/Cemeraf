@model CreateCitaViewModel

@{
    ViewData["Title"] = "Create";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<div class="container">
    <div align="center">
        <h2>Agendar cita</h2>
    </div>
    <br />
    <hr />
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form method="post" asp-controller="Citas" asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <div align="left"><label><span style="font-weight:600;">Descripción</span></label></div>
                    <textarea class="form-control" name="description" rows="4" placeholder="Describe tu necesidad..."></textarea>
                </div>
                <div class="form-group">
                    <div><label><span style="font-weight:600;">Selecciona un doctor (opcional)</span></label></div>
                    <select class="form-control" name="doctorSelected">
                        <option value="1">Andy Florence</option>
                        <option value="2">Daniel Peña</option>
                        <option value="3">Carlos Santana</option>
                        <option value="4">Reyna Suriel</option>
                    </select>
                </div>
                <br />
                <br />
                <br />
                <div>
                    Nota: Tu cita será aprobada dentro de las próximas 24 horas. ¡Gracias por confiar en nosotros!
                </div>
                <br />
                <button type="submit" class="btn btn-primary btn-block">Solicitar cita</button>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
