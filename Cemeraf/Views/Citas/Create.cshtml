@model CreateCitaViewModel

@{
    ViewData["Title"] = "Create";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<div class="container">
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-warning" id="alert-error" role="alert">
            @ViewBag.Error
        </div>
    }
    <div align="center">
        <h2 style="font-weight:600;">Agendar cita</h2>
    </div>
     <hr />
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card" style="padding:2em;">
                <form method="post" asp-controller="Citas" asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <div align="left"><label><span style="font-weight:600;">Descripción</span></label></div>
                        <textarea class="form-control" asp-for="Description" rows="4" placeholder="Describe tu necesidad..."></textarea>
                    </div>
                    <div class="form-group">
                        <div><label><span style="font-weight:600;">Selecciona un doctor (opcional)</span></label></div>
                        <select class="form-control" name="DoctorId" asp-items='new SelectList(Model.Doctors, "DoctorId", "FullName")'>
                            <option value="0" selected>Seleccione...</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <div align="left"><label><span style="font-weight:600;">Fecha para la cita</span></label></div>
                        <input type="date" class="form-control" name="DateAssigned" />
                    </div>
                    <br />
                    <br />
                    <br />
                    <div>
                        Nota: Tu cita será aprobada dentro de las próximas 24 horas. ¡Gracias por confiar en nosotros!
                    </div>
                    <br />
                    <button type="submit" class="btn btn-primary btn-block">¡Solicitar ahora!</button>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
